<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><strong><%= link_to recipe.name, recipe %></strong></td>
    <td><%= link_to 'Destroy', recipe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Manually Add New Recipe', new_recipe_path %>
<%= form_tag('/recipes/add_url') do %>
 <%= text_field_tag 'url' %>
  <%= button_tag do
    content_tag(:strong, 'Add Recipe by Url')
  end %>
<% end %>

<br />

<%= link_to 'Cataloged Sites', :controller => :sites, :action => :cataloged %>

<% if flash[:notice] %>
  <p class="flash-notice"><%= flash[:notice] %></p>
<% end %>

