<h1>Listing sites</h1>

<table>
  <tr>
    <th>Domain</th>
    <th>Title selector</th>
    <th>Method selector</th>
    <th>Ingredient selector</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.domain %></td>
    <td><%= site.title_selector %></td>
    <td><%= site.method_selector %></td>
    <td><%= site.ingredient_selector %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

